<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="edu.aku.hassannaqvi.mapps_form_l1.activities.EndingActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/colorPrimary"
                android:text="@string/istatus"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <RadioGroup
                android:id="@+id/istatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/istatus01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/istatus01" />

                <RadioButton
                    android:id="@+id/istatus02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/istatus02" />

                <RadioButton
                    android:id="@+id/istatus03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/istatus03" />

                <RadioButton
                    android:id="@+id/istatus04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/istatus04" />

                <RadioButton
                    android:id="@+id/istatus05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/istatus05" />

            </RadioGroup>

            <Button
                android:id="@+id/btn_End"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:onClick="endInterview"
                android:text="@string/end_interview"
                android:textColor="#ff1e1e" />


        </LinearLayout>


    </ScrollView>


